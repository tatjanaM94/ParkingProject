@model ParkingProject.MVC.Models.Garages.GarageViewModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>GarageViewModel</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Model.Id
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Model.Address
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MaxCarsInStock)
                </dt>
                <dd class="col-sm-10">
                    @Model.MaxCarsInStock
                </dd>
                @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImgUrl)
            </dt>
            <dd class="col-sm-10">
                @Model.ImgUrl
            </dd>*@


                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Model.PhoneNumber
                </dd>

            </dl>
        </div>

        <div class="col-6">
            <img src="@Model.ImgUrl" />
        </div>

    </div>
   
  
</div>



<div class="p-2">
    <a class="btn btn-danger" asp-controller="Garages" , asp-action="Delete" asp-route-id="@Model.Id">Delete</a>

    <a class="btn btn-primary" asp-controller="Garages" , asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>

@if (Model.Cars.Count == 0)
{
    <h1>There are no cars in the @Model.Name garage</h1>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Model</th>
                <th>Brand</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Model</td>
                    <td>@car.Brand</td>
                </tr>
            }
        </tbody>
    </table>
}